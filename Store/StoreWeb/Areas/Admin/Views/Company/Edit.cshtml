@model Company

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <div class="col-12">
                <h1 class="text-center">Edit Company</h1>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Region"></label>
                <input asp-for="Region" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="StreetAddress"></label>
                <input asp-for="StreetAddress" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="PostalCode"></label>
                <input asp-for="PostalCode" class="form-control" />
            </div>
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-dark form-control">Create</button>
                </div>
                <div class="col-6">
                    <a asp-area="Admin" asp-controller="Company" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</form>
