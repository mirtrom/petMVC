@model List<Product>


<div class="container"> 
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-dark">Products</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Create" class="btn btn-dark">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
					<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"></path>
					<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"></path>
				</svg> Create New Product
			</a>
		</div>
	</div>
	<table id="tbldata" class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model[0].Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model[0].Description)
				</th>
				<th>
					@Html.DisplayNameFor(model => model[0].Price)
				</th>
				<th>
					@Html.DisplayNameFor(model => model[0].Category.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model[0].ImageUrl)
				</th>
				<th>

				</th>
			</tr>
		</thead>
	</table>
</div>

@section Scripts {
	<script src="~/js/product.js"></script>
}