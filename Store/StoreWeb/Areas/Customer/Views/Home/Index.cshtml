@model List<Product>


<div class="container">
	<div class="row pb-3">
		@foreach (var product in Model)
		{
			<div class="col-lg-3 col-sm-6">
				<div class="row p-2">
					<div class="col-12 p-1">
						<div class="card border-0 p-3 shadow border-top border-5 rounded">
							<img src="@product.ImageUrl" class="cardcard-img-top rounded" style="width:95%; height:310px" />
							<div class="card-body pb-0">
								<div class="pl-1">
									<p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Name</p>
								</div>
								<div class="pl-1">
									<p class="text-darl text-opacity-75 text-center">Price: <span>@product.Price.ToString("c")</span></p>
								</div>
								<div>
									<a asp-controller="Home" asp-action="Details" asp-route-productId="@product.Id" class="btn btn-dark bg-gradient border-0 form-control">
										Details
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div> 
